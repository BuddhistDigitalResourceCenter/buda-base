# Systemd unit file for ldspdi

[Unit]
Description=<%= ENV['SVC_DESC'] %>
After=syslog.target network.target

[Service]
Type=simple

Environment=JAVA_HOME=<%= ENV['JAVA_HOME'] %>
Environment=LDSPDI_HOME=<%= ENV['THE_HOME'] %>
Environment='JAVA_OPTS=-Djava.awt.headless=true -Djava.security.egd=file:/dev/./urandom'

WorkingDirectory=<%= ENV['THE_HOME'] %>
ExecStart=/usr/bin/java -Dserver.port=<%= ENV['MAIN_PORT'] %> -Dldspdi.configpath=/etc/buda/<%= ENV['SVC'] %>/ -Dspring.profiles.active=PROD -XX:+ExitOnOutOfMemoryError -Xmx2g -jar  lds-pdi-exec.war
SuccessExitStatus=143

User=<%= ENV['TC_USER'] %>
Group=<%= ENV['TC_GROUP'] %>

UMask=0007
RestartSec=10
Restart=always

[Install]
WantedBy=multi-user.target
