# Systemd unit file template for spring based applications

[Unit]
Description=<%= ENV['SVC_DESC'] %>
After=syslog.target network.target

[Service]
Type=simple

SyslogIdentifier=<%= ENV['SVC'] %>
Environment=JAVA_HOME=<%= ENV['JAVA_HOME'] %>
Environment=AWS_CREDENTIAL_PROFILES_FILE=/etc/buda/<%= ENV['SVC'] %>/credentials
Environment='JAVA_OPTS=-Djava.awt.headless=true -Djava.security.egd=file:/dev/./urandom'

WorkingDirectory=<%= ENV['THE_HOME'] %>
ExecStart=/usr/bin/java -Dserver.port=<%= ENV['MAIN_PORT'] %> -D<%= ENV['SVC'] %>.configpath=/etc/buda/<%= ENV['SVC'] %>/ -Dspring.profiles.active=PROD -XX:+ExitOnOutOfMemoryError -Xms512M <%= ENV['JAVA_EXTRA_ARGS'] %> -jar <%= ENV['EXECFILE'] %> -Dlogging.config=/etc/buda/<%= ENV['SVC'] %>/logback.xml
SuccessExitStatus=143

User=<%= ENV['TC_USER'] %>
Group=<%= ENV['TC_GROUP'] %>

UMask=0007
RestartSec=10
Restart=always

[Install]
WantedBy=multi-user.target
