#!/bin/sh

export JAVA_HOME=<%= ENV['JAVA_HOME'] %>
export JAVA=$JAVA_HOME/bin/java

export APP_PORT="-Ddw.server.applicationConnectors[0].port=<%= ENV['MARPLE_APP_PORT'] %>"
export ADM_PORT="-Ddw.server.adminConnectors[0].port=<%= ENV['MARPLE_ADM_PORT'] %>"
export INDEX="-Ddw.indexPath=<%= ENV['THE_BASE'] %>/<%= ENV['LUCENE_INDEX'] %>"

export JAR=<%= ENV['MARPLE_HOME'] %>/<%= ENV['MARPLE_JAR'] %>
  
exec $JAVA $APP_PORT $ADM_PORT $INDEX -jar $JAR server
